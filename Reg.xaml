<Page x:Class="Ukraine.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ukraine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Введите логин: " Grid.Row="0" HorizontalAlignment="Center" Margin="-90 0 0 0"/>
            <TextBox Name="Login"/>
            <TextBlock Text="Введите пароль: " Grid.Row="1" HorizontalAlignment="Center" Margin="-83 0 0 0"/>
            <PasswordBox Name="Password"/>
            <Button Click="BtnRegg" Content="Зарегистрироваться"/>
        </StackPanel>
    </Grid>
</Page>
