<Page x:Class="Ukraine.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ukraine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Клиенты" Name="BtnClient" Width="200" Height="30" Click="BtnClient_Click"/>
            <Button Content="Заказы" Name="BtnOrder" Width="200" Height="30" Click="BtnOrder_Click"/>
            <Button Content="Типы рекламы" Name="BtnType" Width="200" Height="30" Click="BtnType_Click"/>
        </StackPanel>
    </Grid>
</Page>
