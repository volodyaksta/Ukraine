<Page x:Class="Ukraine.Aut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ukraine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Aut"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Введите логин: " Grid.Row="1" HorizontalAlignment="Center" Margin="-90 0 0 0"/>
            <TextBox x:Name="LoginBox" Background="#FFDEAD"/>
            <TextBlock Text="Введите пароль: " Grid.Row="1" HorizontalAlignment="Center" Margin="-83 0 0 0"/>
            <PasswordBox x:Name="PasswordBox" Background="#FFDEAD"/>
            <Button Click="BtnAut" IsDefault="True" Content="Вход"/>
            <Button Click="BtnReg" Content="Регистрация"/>
        </StackPanel>
    </Grid>
</Page>
